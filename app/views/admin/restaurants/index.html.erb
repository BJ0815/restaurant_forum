<div class="index">
  <div class="container">
    <h1>餐廳後台</h1>

    <div class="row">

      <div class="col-md-12">

        <div>
          <%= link_to "New Restaurant", new_admin_restaurant_path, class:"btn btn-primary" %>
        </div>
        <br />

        <table class="table table-hover" style="text-shadow: black 0.1em 0.1em 0.2em">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>#</th>
            </tr>
          </thead>
          <tbody>
            <% @restaurants.each do |restaurant| %>
            <tr>
              <th><%= restaurant.id %></th>
              <td><%= restaurant.name %></td>
              <td>
                <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, admin_restaurant_path(restaurant), class: "btn btn-default" %>
                <%= link_to '<span class="glyphicon glyphicon-pencil"</span>'.html_safe, edit_admin_restaurant_path(restaurant), class: "btn btn-default" %>
                <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, admin_restaurant_path(restaurant),method: :delete, data:{ confirm: "Are you sure ?"}, class: "btn btn-default" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        
        <div class="text-center">
          <%= paginate @restaurants %>
        </div>

      </div>

    </div>

  </div>
</div>

