<!-- restaurants list,有多寫restaurant-item的class style -->
<% @restaurants.each do |r| %>
  <div class="col-sm-6 col-md-4">
    <div class="restaurant-item">
      <%= image_tag r.image %>
      <div class="caption">
        <h3><%= link_to r.name, restaurant_path(r) %></h3>
        <p class="label label-default"><%= r.category.name %></p>
        <hr>
        <p><%= truncate(r.description, length: 80) %></p>
        <%= render partial: "shared/favorite", locals: {object: r} %>
      </div>
    </div>
  </div>
<% end %>

<!-- 有generate kaminari paginate bootstrap style -->
<div class="text-center">
  <%= paginate @restaurants %>
</div>