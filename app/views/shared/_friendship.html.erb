<% if current_user.friend?(object) %> 

  <%= link_to  friendship_path(object), method: :delete, class: "btn btn-danger"  do %>
    <span class="glyphicon glyphicon-remove">刪除好友</span>
  <% end %>

<% elsif current_user.applying?(object)  %>

  <%= link_to "取消申請", friendship_path(object), method: :delete, class: "btn btn-default" %>

<% elsif current_user.accepted?(object) %>

  <%= link_to friendship_path(object), method: :patch, class: "btn btn-success" do %>
    <span class="glyphicon glyphicon-ok">接受申請</span>
  <% end %>

<% else %>

  <%= link_to "申請好友", friendships_path(friend_id: object), method: :post, class: "btn btn-primary" %>

<% end %>