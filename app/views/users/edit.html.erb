<%= form_for @user do |u| %>
  <%= u.label :name, "Name" %>
  <%= u.text_field :name %>

  <%= u.label :email, "Email" %>
  <%= u.email_field :email %>

  <%= u.label :intro, "Intro" %>
  <%= u.text_area :intro %>

  <%= u.label :avatar, "Avatar" %>
  <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
  <%= u.file_field :avatar %>

  <%= u.submit %>

<% end %>
