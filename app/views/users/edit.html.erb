<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3">

      <h1 class="text-center" style="margin-bottom: 60px">Update your profile</h1>

      <%= form_for @user do |u| %>
        <div class="form-group">
            <%= u.label :name, "Name" %>
            <%= u.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= u.label :email, "Email" %>
          <%= u.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= u.label :intro, "Intro" %>
          <%= u.text_area :intro, class: "form-control", size: "20x10", resize: "none" %>
        </div>
        <div class="form-group">
          <%= u.label :avatar, "Avatar" %>
          <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
          <%= u.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= u.submit class: "btn btn-primary" %>
          <%= link_to 'Cancel', user_path(@user), class: "btn btn-default" %>
        </div>
      <% end %>
    </div>

  </div>
</div>
