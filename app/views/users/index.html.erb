<div class="container">
  <div class="row">

    <%= render partial: "shared/nav_tabs" %>

<div class="container">
  <div class="row">

    <div class="col-md-12">
      <div>
        <h1>美食達人</h1>
      </div>
      <hr>

      <% @users.each do |user| %>
        <div class="col-md-3 text-center user-item">
          <%= link_to user_path(user) do%>
          <!-- 使用blank?判斷avatar欄位為空值或nil時皆會回傳false -->
            <% if user.avatar.blank? %>
              <img src="http://via.placeholder.com/140x120">
            <% else %>
              <%= image_tag user.avatar, class: "img-rounded" %>
            <% end %>
            <h4><%= user.name %></h4>
          <% end %>

          <%= render partial: "shared/following", locals: { object: user }%>
        </div>
      <% end %>

    </div>
  </div>
</div>